{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserConsent",
  "description": "Schema for GDPR-compliant user consent",
  "type": "object",
  "properties": {
    "consent_given": {
      "type": "boolean",
      "description": "Whether consent was given or declined"
    },
    "consent_scope": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["catalog_scan", "analytics", "model_training", "marketing"]
      },
      "uniqueItems": true,
      "description": "Specific activities user consents to"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of consent"
    },
    "ip_address": {
      "type": "string",
      "oneOf": [
        {"format": "ipv4"},
        {"format": "ipv6"}
      ],
      "description": "IP address of user giving consent"
    },
    "user_agent": {
      "type": "string",
      "description": "User agent string"
    }
  },
  "required": ["consent_given", "timestamp"],
  "if": {
    "properties": {
      "consent_given": {"const": true}
    }
  },
  "then": {
    "required": ["consent_scope"]
  },
  "additionalProperties": false
}
